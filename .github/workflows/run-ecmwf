name: ECMWF MeteoD

on:
  schedule:
    # 08:30 UTC tutti i giorni
    - cron: "30 8 * * *"
    # 20:30 UTC tutti i giorni
    - cron: "30 20 * * *"
  workflow_dispatch:

jobs:
  run-bollettino:
    runs-on: ubuntu-latest
    env:
      LC_ALL: it_IT.UTF-8
      LANG: it_IT.UTF-8
      LANGUAGE: it_IT.UTF-8

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Setup Python
      uses: actions/setup-python@v5
      with:
        python-version: "3.11"

    - name: Install Python dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Install rclone
      run: curl https://rclone.org/install.sh | sudo bash

    - name: Setup rclone config from secret
      env:
        RCLONE_CONFIG: ${{ secrets.RCLONE_CONFIG }}
      run: |
        mkdir -p /home/runner/.config/rclone
        echo "${RCLONE_CONFIG}" > /home/runner/.config/rclone/rclone.conf
        chmod 600 /home/runner/.config/rclone/rclone.conf

    - name: Run ECMWF pipeline with background upload and log
      run: |
        # Determina data e run in base agli orari dei trigger
        NOW_HOUR=$(date -u +%H%M)
        if [ "$NOW_HOUR" -lt 0830 ]; then
          # Prima delle 08:30 UTC ‚Üí run 12 giorno precedente
          DATE=$(date -u -d "yesterday" +%Y%m%d)
          RUN=12
        elif [ "$NOW_HOUR" -lt 2030 ]; then
          # Tra 08:30 e 20:30 UTC ‚Üí run 00 del giorno corrente
          DATE=$(date -u +%Y%m%d)
          RUN=00
        else
          # Dopo 20:30 UTC ‚Üí run 12 del giorno corrente
          DATE=$(date -u +%Y%m%d)
          RUN=12
        fi

        RUN_FOLDER="${DATE}${RUN}_ECMWF"
        LOCAL_DIR="./${RUN_FOLDER}"
        REMOTE_DIR="gd_personal:MeteoD/ECMWF/${RUN_FOLDER}"

        mkdir -p "$LOCAL_DIR"

        echo "üì§ Upload in background attivo per $LOCAL_DIR ‚Üí $REMOTE_DIR ogni 2 minuti"

        # Funzione log upload
        log_upload() {
          echo "üì• File caricati finora:"
          rclone lsf "$REMOTE_DIR"
        }

        # Loop di upload in background
        (
          while true; do
            echo "‚è± Upload in corso: $(date -u)"
            rclone copy "$LOCAL_DIR" "$REMOTE_DIR" --drive-chunk-size 64M --verbose --ignore-existing
            log_upload
            sleep 120
          done
        ) &
        SYNC_PID=$!

        # Lancia Python per generare i file
        python ecmwf.py

        # Termina il loop di upload dopo che Python finisce
        kill $SYNC_PID
        echo "‚úÖ Upload finale completato"
        log_upload
