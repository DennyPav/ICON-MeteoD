name: ECMWF MeteoD

on:
  schedule:
    - cron: "30 8 * * *"
    - cron: "30 20 * * *"
  workflow_dispatch:

jobs:
  run-bollettino:
    runs-on: ubuntu-latest
    env:
      LC_ALL: C.UTF-8
      LANG: C.UTF-8
      LANGUAGE: C.UTF-8

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Setup Python
      uses: actions/setup-python@v5
      with:
        python-version: "3.11"

    - name: Install Python dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Run ECMWF pipeline
      run: python ecmwf-run.py

    - name: Install rclone
      run: curl https://rclone.org/install.sh | sudo bash

    - name: Setup rclone config from secret
      env:
        RCLONE_CONFIG: ${{ secrets.RCLONE_CONFIG }}
      run: |
        mkdir -p /home/runner/.config/rclone
        echo "${RCLONE_CONFIG}" > /home/runner/.config/rclone/rclone.conf
        chmod 600 /home/runner/.config/rclone/rclone.conf

    - name: Upload output to Google Drive
      run: |
        # Determina data e run corretti
        NOW_HOUR=$(date -u +%H%M)
        if [ "$NOW_HOUR" -lt 0830 ]; then
          DATE=$(date -u -d "yesterday" +%Y%m%d)
          RUN=20
        else
          DATE=$(date -u +%Y%m%d)
          HOUR=$(date -u +%H)
          if [ "$HOUR" -lt 20 ]; then
            RUN=08
          else
            RUN=20
          fi
        fi

        RUN_FOLDER="${DATE}${RUN}"
        OUTDIR="./${RUN_FOLDER}"

        echo "ðŸ“¤ Attendo che la cartella $OUTDIR venga creata..."
        # Aspetta finchÃ© la cartella non esiste (max 30 min)
        MAX_WAIT=1800
        WAITED=0
        while [ ! -d "$OUTDIR" ] && [ $WAITED -lt $MAX_WAIT ]; do
          sleep 10
          WAITED=$((WAITED+10))
        done

        if [ ! -d "$OUTDIR" ]; then
          echo "Cartella $OUTDIR non trovata dopo 30 min, esco"
          exit 1
        fi

        echo "Cartella trovata: $OUTDIR"
        echo "Upload in corso..."

        # Upload con retry (3 tentativi)
        RETRIES=3
        COUNT=0
        until [ $COUNT -ge $RETRIES ]
        do
          rclone copy "$OUTDIR" gd_personal:MeteoD/ECMWF/"$RUN_FOLDER" --drive-chunk-size 64M --verbose --ignore-errors && break
          COUNT=$((COUNT+1))
          echo "âš  Tentativo $COUNT fallito, riprovo tra 30 secondi..."
          sleep 30
        done

        if [ $COUNT -eq $RETRIES ]; then
          echo "Upload fallito dopo $RETRIES tentativi"
          exit 1
        fi

        echo "âœ… Upload completato!"
